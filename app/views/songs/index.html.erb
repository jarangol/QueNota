<h1>Songs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Release</th>
      <th>Singer</th>
      <th>Album</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.release %></td>
        <td><%= song.singer.name %></td>
        <td><%= song.album.name %></td>
        <td><%= song.genre.name %></td>
        <td><%= link_to 'Show', song %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if user_signed_in? %>
  <div class="fixed-action-btn">
      <a href='/songs/new'class="btn-floating btn-large green">
        <i class="glyphicon glyphicon-plus"></i>
      </a>
  </div>
<%end%>
