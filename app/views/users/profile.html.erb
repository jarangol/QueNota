<h1>My songs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Release</th>
      <th>Url</th>
      <th>Singer</th>
      <th>Album</th>
      <th>Genre</th>
      <th>Privacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.release %></td>
        <td><%= song.song_url %></td>
        <td><%= song.singer.name %></td>
        <td><%= song.album.name %></td>
        <td><%= song.genre.name %></td>
        <td><%= song.privacity %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="fixed-action-btn">
    <a href='/songs/new'class="btn-floating btn-large green">
      <i class="glyphicon glyphicon-plus"></i>
    </a>
</div>
